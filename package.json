{
  "name": "stockorama2",
  "version": "0.0.1",
  "description": "Stock-O-Rama monorepo with React frontend and NestJS backend",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "npm@8.5.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev --workspace=@stockorama/backend",
    "dev:frontend": "npm run dev --workspace=@stockorama/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@stockorama/backend",
    "build:frontend": "npm run build --workspace=@stockorama/frontend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=@stockorama/backend",
    "test:frontend": "npm run test --workspace=@stockorama/frontend",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspace=@stockorama/backend",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}